# 🌐 VARIÁVEIS DE AMBIENTE - SISTEMA SOROPEL (DESENVOLVIMENTO)

# 🔧 API Configuration
VITE_API_URL=http://localhost:3000
VITE_API_VERSION=v1

# 📱 App Configuration  
VITE_APP_NAME=Sistema Soropel
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# 🗄️ Supabase Configuration
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# 🤖 OpenAI Configuration (para OCR real)
VITE_OPENAI_API_KEY=

# 🎯 Feature Flags
VITE_ENABLE_OCR=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SUPABASE=true

# 📊 Debug
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info

# 🌐 Base de publicação
# Dev usa "/" para evitar duplicação de caminhos no Vite dev server
# Produção usa "/projeto-soropel/" (definido em .env.production)
VITE_BASE=/
